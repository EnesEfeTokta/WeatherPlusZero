<Window x:Class="WeatherPlusZero.HelloCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherPlusZero"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="HelloCard" Height="250" Width="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Border x:Name="BackgroundBorder" BorderThickness="1" Grid.RowSpan="4" CornerRadius="5,5,5,5">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF006CFF"/>
                    <GradientStop Color="#FF00BEFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Image/>
        </Border>

        <TextBlock x:Name="InfoPanelHead" Text="Hi, Enes Efe" Foreground="White" TextAlignment="Center" LineHeight="7" Margin="10,0,10,0" VerticalAlignment="Center" FontWeight="Bold" Height="38" FontSize="30" Grid.Row="1"/>
        <TextBlock x:Name="InfoPanelBody" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Shall we send a notification to your email to keep you updated?" VerticalAlignment="Center" FontSize="20" TextAlignment="Center" Width="320" Height="58" Foreground="White"/>

        <Border BorderThickness="1" Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Yes" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="75" Background="#FF77D0F9" BorderBrush="#FF77F9BC" Foreground="#FF28FF00" FontWeight="Bold" Height="35"/>
                <Button Content="No" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Background="#FF77D0F9" BorderBrush="#FFF97777" Foreground="Red" FontWeight="Bold" Width="80" Height="35"/>
            </Grid>
        </Border>
        <Border BorderThickness="1">
            <Image Source="/Images/HappyIcon.png" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="80" Height="80"/>
        </Border>
    </Grid>
</Window>
