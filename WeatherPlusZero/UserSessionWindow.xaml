<Window x:Class="WeatherPlusZero.UserSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherPlusZero"
        mc:Ignorable="d"
        Title="Weather Plus Zero"
        Height="460"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="Images/AppLogo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="280*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/RainyWeatherInTheEvening.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Login Panel background -->
        <Border CornerRadius="25"
                Background="#33FFFFFF"
                BorderBrush="#66FFFFFF"
                BorderThickness="0"
                Grid.Column="1"
                Grid.Row="1"
                MaxWidth="300">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="130*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="35*"/>
                    <RowDefinition Height="28*"/>
                </Grid.RowDefinitions>
                <Image x:Name="UserProfileIconImage" HorizontalAlignment="Center" Height="115" Margin="0,10,0,0" VerticalAlignment="Top" Width="115" Source="/UserProfileIcon.png"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="1" Grid.Column="1" CornerRadius="5,5,5,5" Grid.ColumnSpan="2" Margin="0,0,18,0">
                        <Border.Background>
                            <SolidColorBrush Color="#FF60C3EF" Opacity="0.5"/>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="30*"/>
                            </Grid.ColumnDefinitions>
                            <Image x:Name="EmailIconImage" Source="Images/EmailIcon.png" Grid.Column="0" HorizontalAlignment="Right" Margin="0,3,0,3" Width="23"/>
                            <TextBox x:Name="EmailTextBox" Grid.Column="1" TextWrapping="Wrap" Text="example__@gmail.com" Background="Transparent" Foreground="White" Margin="0,4,0,4" BorderThickness="0"/>
                            <Image x:Name="EmailStatusIconImage" Source="Images/TickIcon.png" Grid.Column="2" HorizontalAlignment="Center" Margin="0,5,0,5" Width="15"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="1" Grid.Column="1" CornerRadius="5,5,5,5" Grid.ColumnSpan="2" Margin="0,0,18,0">
                        <Border.Background>
                            <SolidColorBrush Color="#FF60C3EF" Opacity="0.5"/>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="30*"/>
                            </Grid.ColumnDefinitions>
                            <Image x:Name="PasswordIconImage" Source="Images/LockIcon.png" Grid.Column="0" HorizontalAlignment="Right" Margin="0,3,0,3" Width="23"/>
                            <PasswordBox x:Name="PasswordTextBox" Grid.Column="1" Background="Transparent" Foreground="White" Margin="0,4,0,4" BorderThickness="0"/>
                            <Image x:Name="PasswordStatusIconImage" Source="Images/ErrorIcon.png" Grid.Column="2" HorizontalAlignment="Center" Margin="0,5,0,5" Width="15"/>
                        </Grid>
                    </Border>
                </Grid>

                <Button x:Name="ForgotPasswordButton" Content="Forgot Password" HorizontalAlignment="Center" Foreground="#FF60C3EF" Grid.Row="3" VerticalAlignment="Center" Width="226" FontFamily="Arial Narrow">
                    <Button.BorderBrush>
                        <SolidColorBrush Color="#FF707070" Opacity="0"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                    </Button.Background>
                </Button>

                <Button x:Name="LogInButton" HorizontalAlignment="Center" Foreground="White" Grid.Row="4" VerticalAlignment="Center" Width="124" FontFamily="Arial" Content="Log In" Click="LogInClickButton">
                    <Button.BorderBrush>
                        <SolidColorBrush Color="#FF707070" Opacity="0"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <SolidColorBrush Color="#FF60C3EF" Opacity="1"/>
                    </Button.Background>
                </Button>

                <Button x:Name="RegisterButton" HorizontalAlignment="Center" Foreground="#FFADDFF6" Grid.Row="5" VerticalAlignment="Center" Width="226" FontFamily="Agency FB" Content="Register Now">
                    <Button.BorderBrush>
                        <SolidColorBrush Color="#FF707070" Opacity="0"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Border>
        <Grid Grid.Column="2" Grid.Row="1"/>

    </Grid>
</Window>